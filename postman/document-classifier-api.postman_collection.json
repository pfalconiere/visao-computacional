		{
			"name": "Async Classification",
			"item": [
				{
					"name": "[HAPPY] POST /classify/async",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// HAPPY PATH: Submissão assíncrona deve retornar task_id",
									"pm.test(\"Status code is 200, 202, or 503\", function () {",
									"    pm.expect(pm.response.code).to.be.oneOf([200, 202, 503]);",
									"});",
									"",
									"if (pm.response.code === 200 || pm.response.code === 202) {",
									"    pm.test(\"Response has task_id or message\", function () {",
									"        var jsonData = pm.response.json();",
									"        // 200/202: tarefa aceita, deve ter task_id ou message",
									"        pm.expect(jsonData.task_id || jsonData.message).to.exist;",
									"        if (jsonData.task_id) {",
									"            pm.environment.set('task_id', jsonData.task_id);",
									"        }",
									"    });",
									"} else {",
									"    pm.test(\"503 indicates async not available\", function () {",
									"        var jsonData = pm.response.json();",
									"        pm.expect(jsonData).to.have.property('error');",
									"    });",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
